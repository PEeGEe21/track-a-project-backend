    "nestjs-uuid": "^0.1.4",
    "nodemailer": "^6.9.13",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "slug": "^8.2.3",
    "socket.io": "^4.8.1",
    "swagger-ui-express": "^5.0.0",
    "twilio": "^5.0.0-rc.1",
    "typeorm": "^0.3.19",
